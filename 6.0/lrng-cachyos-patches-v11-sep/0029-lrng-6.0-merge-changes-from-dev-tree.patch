 		lrng_set_entropy_thresh(requested_bits);
@@ -366,7 +352,7 @@ void lrng_init_ops(struct entropy_buf *eb)
 			if (state->can_invalidate)
 				invalidate_batched_entropy();
 
-			state->lrng_min_seeded++;
