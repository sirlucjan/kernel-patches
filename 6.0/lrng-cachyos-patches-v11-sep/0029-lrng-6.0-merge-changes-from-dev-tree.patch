 }
 
 bool lrng_pool_all_numa_nodes_seeded_get(void)
@@ -179,7 +173,7 @@ bool lrng_pool_all_numa_nodes_seeded_get(void)
 }
 
 /* Return boolean whether LRNG reached minimally seed level */
