 {
 	static const struct vm_operations_struct dummy_vm_ops = {};
@@ -619,6 +698,7 @@ static inline void vma_init(struct vm_area_struct *vma, struct mm_struct *mm)
 	vma->vm_mm = mm;
 	vma->vm_ops = &dummy_vm_ops;
