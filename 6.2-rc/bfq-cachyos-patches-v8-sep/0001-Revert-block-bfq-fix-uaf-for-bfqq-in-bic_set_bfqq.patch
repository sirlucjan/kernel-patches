 	bfqq = bic_to_bfqq(bic, false);
 	if (bfqq) {
-		struct bfq_queue *old_bfqq = bfqq;
-
+		bfq_release_process_ref(bfqd, bfqq);
 		bfqq = bfq_get_queue(bfqd, bio, false, bic, true);
 		bic_set_bfqq(bic, bfqq, false);
-		bfq_release_process_ref(bfqd, old_bfqq);
