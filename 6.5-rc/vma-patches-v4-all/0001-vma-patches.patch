--- a/include/linux/mm.h
+++ b/include/linux/mm.h
@@ -653,8 +653,8 @@ static inline bool vma_start_read(struct vm_area_struct *vma)
 	if (unlikely(down_read_trylock(&vma->vm_lock->lock) == 0))
 		return false;
 
