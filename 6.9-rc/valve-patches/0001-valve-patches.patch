+				__gamepad_set_mapping(&hdev->dev, btn_pair_m1_m2);
+				__gamepad_set_mode(&hdev->dev, xpad_mode_game);
+			}
+
+			if (sysfs_create_groups(&hdev->dev.kobj, gamepad_device_attr_groups))
+				goto err_stop_hw;
+		}
+	}
+
+	return 0;
