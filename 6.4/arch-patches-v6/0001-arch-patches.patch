index 915ad6dae..d4b1c25b4 100644
--- a/kernel/fork.c
+++ b/kernel/fork.c
@@ -666,6 +666,12 @@ static __latent_entropy int dup_mmap(struct mm_struct *mm,
 		retval = -EINTR;
 		goto fail_uprobe_end;
