-	unsigned long		last_checked;
-	unsigned long		last_activity[NR_STAT_GROUPS];
-	unsigned long		ios[NR_STAT_GROUPS];
-	unsigned long		index;
-	struct block_device	*bdev;
-	struct xarray		linked_leds;
-};
-
