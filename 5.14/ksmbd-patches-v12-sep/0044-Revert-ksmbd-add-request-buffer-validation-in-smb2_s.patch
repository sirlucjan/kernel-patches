+	return smb2_rename(work, fp, user_ns,
+			   (struct smb2_file_rename_info *)buf,
 			   work->sess->conn->local_nls);
 }
 
@@ -5765,71 +5743,40 @@ static int set_file_mode_info(struct ksmbd_file *fp, char *buf)
